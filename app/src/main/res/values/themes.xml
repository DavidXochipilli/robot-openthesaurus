<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="ot_blue">#0071BD</color>
    <color name="ot_white">#FFFFFF</color>

    <style name="AppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ot_blue</item>
        <item name="android:titleTextStyle">@style/AppTitleTextStyle</item>
    </style>

    <style name="AppTitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ot_white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
